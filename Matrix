# Define matrices
A <- matrix(c(2, 0, 1, 3), ncol = 2)
B <- matrix(c(5, 2, 4, -1), ncol = 2)

# Matrix addition
A_plus_B <- A + B
A_plus_B

# Matrix subtraction
A_minus_B <- A - B
A_minus_B

# Diagonal matrix
D <- diag(c(4, 1, 2, 3))
D

# Custom 5x5 matrix using only cbind and diag
M <- rbind(
  c(3, 1, 1, 1, 1),        # first row
  cbind(2, diag(3, 4))     # rows 2-5: first column 2, then 4x4 diagonal of 3s
)

M
