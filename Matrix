# Define matrices
A <- matrix(c(2, 0, 1, 3), ncol = 2)
B <- matrix(c(5, 2, 4, -1), ncol = 2)

# Matrix addition
A_plus_B <- A + B
A_plus_B

# Matrix subtraction
A_minus_B <- A - B
A_minus_B

# Diagonal matrix
D <- diag(c(4, 1, 2, 3))
D

# 5x5 matrix
M <- cbind(
  c(3, 2, 2, 2, 2),     
  diag(3, 5)[, -1]      
)

M
